extends layout

block content
  header#top.header
    img#logo(src='/img/logo.png')
    h1 LOGIN
    #signup-form.col-md-offset-4
      form#signupFormHelper.form-horizontal(method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
          .col-sm-6
            input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus)
        .form-group
          .col-sm-6
            input.form-control(type='password', name='password', id='password', placeholder='Password')
        .form-group
          .col-sm-7
            button.btn.btn-success#signupButton(type='submit')
              span.ion-person-add
              | LOGIN
