  // Header
  header#top.header
      nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container-fluid
            .navbar-header
              a.navbar-brand(href='/dashboard/#{id}') Unforget
            a.navbar-text.navbar-right.navbar-link#navbar-logout(href='/logout') Logout
      h1 UnForget 
      h3 Hello, #{userName}!
      br
      h4 #{title}
      #form.col-md-offset-5  
        form.form-horizontal(name="add",method="post",action="/dashboard/" + title + '/' + id, role='form')
          .form-group
            .col-md-4
              input#nameObj.form-control(type="text", placeholder="Object Name", name="nameObj")
          .form-group
            .col-md-4
              input#locationObj.form-control(type="text", placeholder="Location", name="locationObj")
          .form-group
            .col-md-4
               button#dash.btn.btn-default(type="submit") submit
      br
      div.table-responsive#format
        table.table.table-hover#table
          thead
            tr 
              th Object
              th Last Placed 
              th Last Touched
              th Update/Delete?
          tbody
            each obj in objs
              tr
                td #{obj.name}
                td #{obj.location}
                td #{obj.user}
                td
                  a.button.btn.btn-primary.btn-xs.edit-delete(href='/update/#{title}/#{obj._id}') Update
                  p.edit-delete / 
                  a.button.btn.btn-danger.btn-xs.edit-delete(href='/delete/#{title}/#{obj._id}') Delete
